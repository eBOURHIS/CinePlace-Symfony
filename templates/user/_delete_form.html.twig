<form method="post" action="{{ path('user_delete', {'id': user.id}) }}" onsubmit="return confirm('Vous allez supprimer votre compte. Voulez-vous continuer ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button class="btn btn-danger" title="Supprimer"><i class="fas fa-trash"></i></button>
</form>
