<form method="post" action="{{ path('film_delete', {'id': film.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer ce film ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ film.id) }}">
    <button class="btn btn-danger" title="Supprimer"><i class="fas fa-trash"></i></button>
</form>
