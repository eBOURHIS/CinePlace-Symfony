{% extends 'base.html.twig' %}

{% block title %}Film index{% endblock %}

{% block body %}
    <h1>Film index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Realisateur</th>
                <th>Date_Parution</th>
                <th>Genre</th>
                <th>Acteurs</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for film in films %}
            <tr>
                <td>{{ film.id }}</td>
                <td>{{ film.Titre }}</td>
                <td>{{ film.Realisateur }}</td>
                <td>{{ film.DateParution ? film.DateParution|date('Y-m-d') : '' }}</td>
                <td>{{ film.Genre }}</td>
                <td>{{ film.Acteurs }}</td>
                <td>{{ film.Description }}</td>
                <td>
                    <a href="{{ path('film_show', {'id': film.id}) }}">show</a>
                    <a href="{{ path('film_edit', {'id': film.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('film_new') }}">Create new</a>
{% endblock %}
