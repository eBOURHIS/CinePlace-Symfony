{% block title %}Film{% endblock %}

{% block body %}
    <h1>Film</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ film.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ film.Titre }}</td>
            </tr>
            <tr>
                <th>Realisateur</th>
                <td>{{ film.Realisateur }}</td>
            </tr>
            <tr>
                <th>Date_Parution</th>
                <td>{{ film.DateParution ? film.DateParution|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>{{ film.Genre }}</td>
            </tr>
            <tr>
                <th>Acteurs</th>
                <td>{{ film.Acteurs }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ film.Description }}</td>
            </tr>
